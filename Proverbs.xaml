<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZoharBible.Proverbs"
             BackgroundColor="DarkBlue">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Frame
                Grid.Row="0"
                BorderColor="LightBlue"
                BackgroundColor="LightBlue"
                Padding="3"
                HorizontalOptions="FillAndExpand">
                <Label
                    x:Name="MessageLabel"
                    BackgroundColor="DarkBlue"
                    Text="..."
                    TextColor="White"
                    Padding="10"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center" />
            </Frame>
            <Frame
                Grid.Row="1"
                BorderColor="LightBlue"
                BackgroundColor="LightBlue"
                CornerRadius="0"
                Padding="5">
                <StackLayout>
                    <Editor
                        x:Name="ProverbEditor"
                        HeightRequest="300"
                        AutoSize="TextChanges"
                        FontSize="18"
                        BackgroundColor="Green"
                        TextColor="YellowGreen"
                        Placeholder="A random verse appears here..."
                        PlaceholderColor="YellowGreen"
                        VerticalOptions="FillAndExpand"
                        TextChanged="OnProverbEditorTextChanged" />
                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                      <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                          <Button
                              x:Name="StartSpeak"
                              Text="Start Speak"
                              BackgroundColor="LightBlue"
                              TextColor="DarkBlue"
                              IsEnabled="False"
                              Clicked="OnStartSpeakClicked"
                              HeightRequest="40">
                              <Button.Triggers>
                                  <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                      <Setter Property="BorderColor" Value="DarkGray" />
                                      <Setter Property="BackgroundColor" Value="LightGray" />
                                      <Setter Property="BorderWidth" Value="1" />
                                  </Trigger>
                                  <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                                      <Setter Property="BorderColor" Value="Gray" />
                                      <Setter Property="BackgroundColor" Value="LightGray" />
                                      <Setter Property="BorderWidth" Value="1" />
                                  </Trigger>
                              </Button.Triggers>
                              <Button.Style>
                                  <Style TargetType="Button">
                                      <Setter Property="BorderColor" Value="Black" />
                                      <Setter Property="BorderWidth" Value="1" />
                                      <Setter Property="FontSize" Value="Small" />
                                      <Setter Property="HeightRequest" Value="40" />
                                  </Style>
                              </Button.Style>
                          </Button>
                      
                          <Button
                              x:Name="StopSpeak"
                              Text="Stop Speak"
                              BackgroundColor="LightBlue"
                              TextColor="DarkBlue"
                              IsEnabled="False"
                              Clicked="OnStopSpeakClicked"
                              HeightRequest="40">
                              <Button.Triggers>
                                  <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                      <Setter Property="BorderColor" Value="DarkGray" />
                                      <Setter Property="BackgroundColor" Value="LightGray" />
                                      <Setter Property="BorderWidth" Value="1" />
                                  </Trigger>
                                  <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                                      <Setter Property="BorderColor" Value="Gray" />
                                      <Setter Property="BackgroundColor" Value="LightGray" />
                                      <Setter Property="BorderWidth" Value="1" />
                                  </Trigger>
                              </Button.Triggers>
                              <Button.Style>
                                  <Style TargetType="Button">
                                      <Setter Property="BorderColor" Value="Black" />
                                      <Setter Property="BorderWidth" Value="1" />
                                      <Setter Property="FontSize" Value="Small" />
                                      <Setter Property="HeightRequest" Value="40" />
                                  </Style>
                              </Button.Style>
                          </Button>
                      
                          <Button
                              x:Name="GetAnalysisButton"
                              Text="Get Analysis"
                              BackgroundColor="LightBlue"
                              TextColor="DarkBlue"
                              IsEnabled="False"
                              Clicked="OnGetAnalysisButtonClicked"
                              HeightRequest="40">
                              <Button.Triggers>
                                  <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                      <Setter Property="BorderColor" Value="DarkGray" />
                                      <Setter Property="BackgroundColor" Value="LightGray" />
                                      <Setter Property="BorderWidth" Value="1" />
                                  </Trigger>
                                  <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                                      <Setter Property="BorderColor" Value="Gray" />
                                      <Setter Property="BackgroundColor" Value="LightGray" />
                                      <Setter Property="BorderWidth" Value="1" />
                                  </Trigger>
                              </Button.Triggers>
                              <Button.Style>
                                  <Style TargetType="Button">
                                      <Setter Property="BorderColor" Value="Black" />
                                      <Setter Property="BorderWidth" Value="1" />
                                      <Setter Property="FontSize" Value="Small" />
                                      <Setter Property="HeightRequest" Value="40" />
                                  </Style>
                              </Button.Style>
                          </Button>
                      </HorizontalStackLayout>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <StackLayout
                Grid.Row="2"
                Orientation="Vertical"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="10"
                Margin="0,20,0,20">
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="10"
                             Margin="0,0,0,10">
                    <Label
                        Text="Give Verse Number or 0 for random"
                        TextColor="White"
                        VerticalTextAlignment="Center" />
                    <Entry
                        x:Name="ProverbNumberEntry"
                        Text="0"
                        Keyboard="Numeric"
                        TextColor="Black"
                        BackgroundColor="White"
                        WidthRequest="100"
                        MaxLength="3"
                        HorizontalTextAlignment="Center" 
                        TextChanged="OnProverbNumberEntryTextChanged" />
                </StackLayout>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="3"
                             Margin="0,0,0,10">
                    <CheckBox x:Name="PartCheckBox"
                              Color="White"
                              IsChecked="True"
                              CheckedChanged="OnCheckBoxChanged" />
                    <Label Text="Part"
                           TextColor="White"
                           VerticalTextAlignment="Center" />
                    <CheckBox x:Name="FullCheckBox"
                              Color="White"
                              CheckedChanged="OnCheckBoxChanged" />
                    <Label Text="Full"
                           TextColor="White"
                           VerticalTextAlignment="Center" />
                </StackLayout>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="3"
                             Margin="0,0,0,10">
                    <CheckBox x:Name="ChatGPTCheckBox"
                              Color="White"
                              CheckedChanged="OnChatbotCheckBoxChanged" />
                    <Label Text="ChatGPT"
                           TextColor="White"
                           VerticalTextAlignment="Center" />
                    <CheckBox x:Name="GroKCheckBox"
                              Color="White"
                              IsChecked="True"
                              CheckedChanged="OnChatbotCheckBoxChanged" />
                    <Label Text="GroK"
                           TextColor="White"
                           VerticalTextAlignment="Center" />
                    <CheckBox x:Name="GeminiCheckBox"
                              Color="White"
                              CheckedChanged="OnChatbotCheckBoxChanged" />
                    <Label Text="Gemini"
                           TextColor="White"
                           VerticalTextAlignment="Center" />
                    <CheckBox x:Name="AllAICheckBox"
                              Color="White"
                              CheckedChanged="OnChatbotCheckBoxChanged" />
                    <Label Text="AllAI"
                           TextColor="White"
                           VerticalTextAlignment="Center" />
                </StackLayout>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Spacing="10">
                    <Button
                        x:Name="KabbalahButton"
                        Text="Kabbalah"
                        BackgroundColor="LightBlue"
                        TextColor="DarkBlue"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Clicked="OnOptionButtonClicked" />
                    <Button
                        x:Name="ZoharButton"
                        Text="Zohar"
                        BackgroundColor="LightBlue"
                        TextColor="DarkBlue"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Clicked="OnOptionButtonClicked" />
                    <Button
                        x:Name="MishnaButton"
                        Text="Mishna"
                        BackgroundColor="LightBlue"
                        TextColor="DarkBlue"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Clicked="OnOptionButtonClicked" />
                    <Button
                        x:Name="AllButton"
                        Text="All"
                        BackgroundColor="LightBlue"
                        TextColor="DarkBlue"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Clicked="OnOptionButtonClicked" />
                    <Button
                        x:Name="ResetButton"
                        Text=""
                        BackgroundColor="Green"
                        TextColor="White"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="50"
                        Clicked="OnResetButtonClicked" />
                </StackLayout>
            </StackLayout>
            <VerticalStackLayout
                Grid.Row="4"
                Padding="30,0"
                Spacing="25"
                HorizontalOptions="Center"
                VerticalOptions="End">
                <Button
                    Text="Get the Verse from the Bible"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnGetZoharExplanationButtonClicked"
                    BackgroundColor="LightBlue"
                    TextColor="DarkBlue" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>