<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZoharBible.MainPage"
             BackgroundColor="#1E3A5F"> 
    <Grid>
        <!-- Hoofdinhoud -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Get a random Proverb"
                    BackgroundColor="#61A0D7" 
                    BorderColor="#FFFFFF" 
                    BorderWidth="2"
                    TextColor="#FFFFFF" 
                    Padding="10"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnGetProverbButtonClicked"/>
        </StackLayout>
        <!-- Versie label in de rechterbovenhoek -->
       <StackLayout VerticalOptions="Start" HorizontalOptions="Fill" Margin="0,10,0,0">
           <Label Text="Versie 1.0.10 - 11/05/2024 (US)"
                  BackgroundColor="Transparent"
                  TextColor="#FFFFFF"
                  FontAttributes="Bold"
                  TextDecorations="Underline"
                  VerticalOptions="Start"
                  HorizontalOptions="Start"
                  HorizontalTextAlignment="Start"
                  FontSize="9"/>
       </StackLayout>
    </Grid>
</ContentPage>
